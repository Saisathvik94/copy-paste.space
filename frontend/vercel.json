{
  "rewrites": [
    { "source": "/(.*)", "destination": "/" },
    { 
      "source": "/_POSTHOG_SECURE_PATH_static/(.*)", 
      "destination": "https://us.i.posthog.com/static/$1",
      "headers": {
        "X-Robots-Tag": "noindex, nofollow",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    { 
      "source": "/_POSTHOG_SECURE_PATH/(.*)", 
      "destination": "https://us.i.posthog.com/$1",
      "headers": {
        "X-Robots-Tag": "noindex, nofollow",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  ]
}
